<h1>List index</h1>

<% @lists.each do |list| %>
    <ul>
    <li><%= list.name %></li>
    <li><%= link_to "See the list", list_path(list) %></li>
    <li><%= link_to 'Delete this list', list_path(list), method: :delete, data: {confirm: "Are you sure?"} %></li>
    </ul>
<% end %>

<%= link_to "Create a new list", new_list_path %>
